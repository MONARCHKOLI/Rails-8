<div class="max-w-md mx-auto mt-16 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Enter OTP</h2>
  <p class="text-gray-600 mb-4">Enter the 6-digit code from your authenticator app or backup codes.</p>

  <%= form_with url: users_verify_otp_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= label_tag :otp_attempt, "OTP Code", class: "block text-gray-700 mb-2" %>
      <%= text_field_tag :otp_attempt, nil, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500", maxlength: 6, autofocus: true %>
    </div>

    <div>
      <%= submit_tag "Verify OTP", class: "w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded transition-colors duration-200" %>
    </div>
  <% end %>

  <%= link_to "Cancel", new_user_session_path, class: "block mt-4 text-sm text-gray-500 hover:text-gray-700" %>
</div>
