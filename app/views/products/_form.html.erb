<%= form_with(model: product, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded shadow") do |f| %>
  <% if product.errors.any? %>
    <div class="mb-4">
      <h2 class="text-red-600 font-bold">Errors:</h2>
      <ul class="list-disc list-inside text-red-500">
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, class: "block font-bold mb-1" %>
    <%= f.text_field :name, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block font-bold mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :price, class: "block font-bold mb-1" %>
    <%= f.number_field :price, step: 0.01, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :stock, class: "block font-bold mb-1" %>
    <%= f.number_field :stock, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= f.submit class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Cancel", products_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
