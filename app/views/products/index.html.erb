<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Products</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white shadow rounded-lg p-4 hover:shadow-lg transition">
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-600 mb-2"><%= product.description %></p>
        <p class="font-bold mb-2">$<%= product.price %></p>
        <p class="text-sm text-gray-500 mb-4">Stock: <%= product.stock %></p>
        <%= link_to "View Details", product_path(product), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
